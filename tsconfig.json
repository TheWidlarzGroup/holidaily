{
  "extends": "eslint-config-twg/tsconfig.json",
  "include": ["**/*"],
  "compilerOptions": {
    "jsx": "react-native",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["./components/*"],
      "contexts/*": ["./contexts/*"],
      "hooks/*": ["hooks/*"],
      "graphqlActions/*": ["graphql/*"],
      "navigation/*": ["navigation/*"],
      "screens/*": ["screens/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    }
  }
}
